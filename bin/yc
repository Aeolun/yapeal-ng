namespace Yapeal;

require_once __DIR__ . '/bootstrap.php';
use Symfony\Component\Console\Application;
use Yapeal\Configuration\Wiring;
use Yapeal\Console\Command\DatabaseInitializer;
use Yapeal\Console\Command\DatabaseUpdater;
use Yapeal\Console\Command\EveApiCreator;
use Yapeal\Console\Command\NetworkCache;
use Yapeal\Console\Command\YapealAutoMagic;
use Yapeal\Container\PimpleContainer;

$dic = new PimpleContainer();
(new Wiring($dic))->wireAll();
try {
    $version = $dic['Yapeal.version'];
} catch (\InvalidArgumentException $exc) {
    $version = '0.0.0-0-dev+noGit-unknown';
}
$gitVersion = trim(exec('git describe --always --long 2>&1', $junk, $status));
if (0 === $status && '' !== $gitVersion && $gitVersion !== $version) {
    $version = $gitVersion . '-dev';
}
$application = new Application('Yapeal Console', $version);
$application->addCommands([
    new DatabaseInitializer('Database:Init', $dic),
    new DatabaseUpdater('Database:Update', $dic),
    new EveApiCreator('EveApi:Creator', $dic),
    new NetworkCache('Network:Cache', $dic),
    new YapealAutoMagic('Yapeal:AutoMagic', $dic)
]);
unset($dic, $gitVersion, $junk, $status, $version);
return $application->run();
