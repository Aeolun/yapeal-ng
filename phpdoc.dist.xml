<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <files>
        <directory>lib/Yapeal</directory>
        <directory> ../</directory>
        <ignore>bin/*</ignore>
        <ignore>lib/Yapeal/docs/*</ignore>
        <ignore>junk.php</ignore>
        <ignore>test.php</ignore>
        <ignore>Yapeal/tests/*</ignore>
        <ignore>Yapeal/vendor/*</ignore>
        <ignore>yapeal-cli.php</ignore>
        <ignore>Yapeal/bootstrap.php</ignore>
        <ignore>Yapeal/cli-config.php</ignore>
    </files>
    <parser default-package-name="Yapeal">
        <target>lib/Yapeal/docs/cache</target>
    </parser>
    <title>Yapeal</title>
    <transformations>
        <template name="responsive"/>
    </transformations>
    <transformer>
        <target>lib/Yapeal/docs/html</target>
    </transformer>
    <logging>
        <level>debug</level>
        <paths>
            <default>log/phpdoc.log</default>
            <errors>log/phpdoc.errors.log</errors>
        </paths>
    </logging>
</phpdoc>
