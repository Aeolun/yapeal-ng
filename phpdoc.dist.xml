<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Yapeal-ng (Yet Another PHP Eve Api Library - Next Generation)</title>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/log/{DATE}.phpdoc.log</default>
            <errors>{APP_ROOT}/log/{DATE}.phpdoc.errors.log</errors>
        </paths>
    </logging>
    <parser>
        <default-package-name>Yapeal</default-package-name>
        <target>docs/phpdoc</target>
    </parser>
    <transformer>
        <target>docs/phpdoc</target>
        <template name="clean"/>
    </transformer>
    <files>
        <directory>bin</directory>
        <directory>lib</directory>
        <file>bin/yc</file>
        <ignore>build/*</ignore>
        <ignore>Database/*</ignore>
        <ignore>cache/*</ignore>
        <ignore>config/*</ignore>
        <ignore>specs/*</ignore>
        <ignore>vendor/*</ignore>
    </files>
</phpdoc>
